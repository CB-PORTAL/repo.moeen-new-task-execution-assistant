{
  "manifest_version": 2,
  "name": "Moeen AI",
  "version": "0.1",
  "description": "An intelligent instruction execution assistant",
  "permissions": ["activeTab", "storage", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Moeen AI"
  }
}